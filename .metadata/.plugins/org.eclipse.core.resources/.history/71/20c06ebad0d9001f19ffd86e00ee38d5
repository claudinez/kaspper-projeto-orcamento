   <script>
    document.addEventListener("DOMContentLoaded", function () {
        let statusCells = document.querySelectorAll("tbody td:nth-child(8)"); // 8¬™ coluna da tabela
    
        statusCells.forEach(cell => {
            let statusText = cell.textContent.trim().toLowerCase();
            let emoji = "";
    
            switch (statusText) {
                case "em an√°lise":
                    emoji = "üîç";
                    cell.style.color = "#FFC107"; // Amarelo
                    break;
                case "urgente":
                    emoji = "üö®";
                    cell.style.color = "#DC3545"; // Vermelho
                    break;
                case "aprovado":
                    emoji = "‚úÖ";
                    cell.style.color = "#28A745"; // Verde
                    break;
                case "conclu√≠do":
                    emoji = "üéØ";
                    cell.style.color = "#007BFF"; // Azul
                    break;
                case "cancelado":
                    emoji = "‚ùå";
                    cell.style.color = "#6C757D"; // Cinza
                    cell.style.textDecoration = "line-through"; // Texto riscado
                    break;
            }
    
            if (emoji) {
                cell.innerHTML = `${emoji} ${cell.textContent.trim()}`;
                cell.style.fontWeight = "bold";
            }
        });
    });
</script>
<script>
    function alterarTexto() {
      const botao = document.getElementById("btnEmail");
      botao.textContent = "Enviado";
      botao.classList.remove("btn-primary");
      botao.classList.add("btn-success");
      botao.disabled = true; // Desativa o bot√£o ap√≥s o clique, se necess√°rio
    }
  </script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Fun√ß√£o para enviar o formul√°rio via AJAX
    function enviarEmailAjax(event) {
        event.preventDefault(); // Impede o envio padr√£o do formul√°rio

        var formData = $(event.target).serialize(); // Obt√©m os dados do formul√°rio

        // Faz a requisi√ß√£o AJAX para enviar o e-mail
        $.ajax({
            url: '/enviar-servico-email',
            method: 'GET', // Ou 'POST', conforme o caso
            data: formData,
            success: function(response) {
                // Muda a cor do bot√£o ap√≥s o envio do e-mail
                mudarCorDoBotao();
            },
            error: function() {
                alert('Erro ao enviar o e-mail');
            }
        });
    }
</script>


